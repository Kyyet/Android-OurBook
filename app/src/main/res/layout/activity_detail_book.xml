<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DetailBook">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp">

                <ImageView
                    android:id="@+id/backDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_back_24"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="24sp"
                    android:fontFamily="@font/adlam_display"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="47dp">

                    <ImageView
                        android:id="@+id/FotoDetail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/baseline_person_24" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/NamaDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textColor="@color/black"
                    android:fontFamily="@font/adlam_display"
                    android:textSize="20sp"
                    android:layout_below="@id/cardView3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="290dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/alias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kontak"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/adlam_display"
                    android:layout_marginStart="32dp"/>

                <TextView
                    android:id="@+id/aliasDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text=""
                    android:layout_below="@id/alias"
                    android:layout_marginStart="32dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Email"
                    android:textSize="20sp"
                    android:fontFamily="@font/adlam_display"
                    android:layout_marginStart="32dp"/>

                <TextView
                    android:id="@+id/emailDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text=""
                    android:layout_below="@id/email"
                    android:layout_marginStart="32dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">


                <TextView
                    android:id="@+id/alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Alamat"
                    android:textSize="20sp"
                    android:fontFamily="@font/adlam_display"
                    android:layout_marginStart="32dp"/>

                <TextView
                    android:id="@+id/alamatDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text=""
                    android:layout_below="@id/alamat"
                    android:layout_marginStart="32dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tglLahir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Tanggal Lahir"
                    android:textSize="20sp"
                    android:fontFamily="@font/adlam_display"
                    android:layout_marginStart="32dp"/>

                <TextView
                    android:id="@+id/tglLahirDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text=""
                    android:layout_below="@id/tglLahir"
                    android:layout_marginStart="32dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/telpon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="No. HandPhone"
                    android:textSize="20sp"
                    android:fontFamily="@font/adlam_display"
                    android:layout_marginStart="32dp"/>

                <TextView
                    android:id="@+id/telponDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text=""
                    android:layout_below="@id/telpon"
                    android:layout_marginStart="32dp"/>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>